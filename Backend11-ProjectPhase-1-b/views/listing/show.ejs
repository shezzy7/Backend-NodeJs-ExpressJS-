<% layout("/layout/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%=list.image%>" alt="list-image" class="card-img-top show-img">
                <div class="card-body">
                    <p class="card-text">
                        <b><%=list.title%></b> <br>
                        <%=list.description%> <br>
                        Rs.<%=list.price.toLocaleString("en-US")%>/night <br>
                        <%=list.location%> <br>
                        <%=list.country%>

                    </p>
                </div>

            </div>
            <div class="btns mb-2">

                <a href="/listings/<%=list._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            
                <form action="/listings/<%=list._id%>?_method=DELETE" method="POST">
            
                    <button class="btn  del-btn offset-5">Delete</button>
                </form>
            </div>
        
    </div>
    
    
</body>
